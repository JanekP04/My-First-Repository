---
const { title, url, description } = Astro.props;
import { Image } from 'astro:assets';
import PostBg from '../../public/PostBg.jpg';
---

<div class="shadow sm:mx-4 sm:mb-4 md:mx-0 w-full max-w-80">
    <a href={url}>
    <Image class="w-full max-h-40" src={PostBg} alt="Placeholder Image" />
    </a>
    <div class=" px-2 pb-6">
            <h1 class="post-title m-0"><a href={url}>{title}</a></h1>
            <p class="post-desc w-full text-wrap mt-1"><a href={url}>{description}</a></p>
    </div>
</div>